<header>
<nav class="navbar navbar-default br0 bn">
  <div class="container">
    <div class="navbar-header">
      <a href="/">
        <div class="logo-header"></div>
      </a>
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">          
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
</header>

<%= yield %>

<footer>
<div class="container">
  <div class="col-sm-9 col-xs-9 col-md-9 col-lg-9">
  <ul>
    <li><%= link_to 'Twitter', "https://twitter.com/profarmer_aus", class: 'blue-link', target: '_blank' %></li>
    <li><%= link_to 'Contact', contact_path, class: 'blue-link' %></li>
    <li><%= link_to 'Privacy Policy and Disclaimer', privacy_path, class: 'blue-link' %></li>
  </ul>
  </div>
  <div class="col-sm-3 col-xs-3 col-md-3 col-lg-3">
  <ul>
    <li>&#169; Copyright <%= Time.now.year %></li>
  </ul>
  </div>
</div>
</footer>

<%= javascript_include_tag 'common-bundle' %>
<%= javascript_include_tag 'public' %>

<script type="text/javascript">
    <%= yield :javascript %>
